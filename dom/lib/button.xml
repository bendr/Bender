<component xmlns="http://bender.igel.co.jp" id="button-prototype">

  <link rel="stylesheet" href="lib.css"/>

  <property name="class"/>
  <property name="down" as="boolean" value="false"/>
  <property name="enabled" as="boolean" value="true"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div id="div">
      <attribute name="class">
        button <text id="class-class"/> <text id="enabled-class"/>
        <text id="down-class"/>
      </attribute>
      <content>
        OK
      </content>
    </html:div>
  </view>

  <watch>
    <get property="class"/>
    <set elem="class-class"/>
  </watch>

  <watch>
    <get property="down"/>
    <set elem="down-class" value="input ? 'down' : ''"/>
  </watch>

  <watch>
    <get property="enabled"/>
    <set elem="enabled-class" value="input ? '' : 'disabled'"/>
  </watch>

  <watch>
    <get elem="div" dom-event="mousedown">
      event.preventDefault();
      return this.properties.enabled;
    </get>
    <set property="down"/>
  </watch>

  <watch>
    <get elem="$document" dom-event="mouseup">
      console.log("!mouseup for %0: %1".fmt(this.id, this.properties.down));
      return cancel(!this.properties.down);
    </get>
    <set event="@pushed"/>
    <set property="down" value="false"/>
  </watch>

</component>
