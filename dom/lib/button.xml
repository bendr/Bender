<component xmlns="http://bender.igel.co.jp" id="button">

  <link rel="stylesheet" href="lib.css"/>

  <property name="class"/>
  <property name="enabled" as="boolean" value="true"/>

  <property name="base-class" value="button"/>
  <property name="down" as="boolean" value="false"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div id="div">
      <attribute name="class">
        <text id="base-class-class"/> <text id="class-class"/>
        <text id="enabled-class"/> <text id="down-class"/>
      </attribute>
      <content>
        OK
      </content>
    </html:div>
  </view>

  <watch>
    <get property="down"/>
    <set elem="down-class" value="input ? 'down' : ''"/>
  </watch>

  <watch>
    <get elem="div" dom-event="mousedown" prevent-default="true"
      value="!cancel(!this.properties.enabled)"/>
    <set property="down"/>
  </watch>

  <watch>
    <get elem="$document" dom-event="mouseup"
      value="cancel(!this.properties.down &amp;&amp;
      (event.target !== this.scope.div || !this.properties.enabled))"/>
    <set property="down" value="false"/>
    <set event="!pushed"/>
  </watch>

  <watch>
    <get property="base-class"/>
    <set elem="base-class-class"/>
  </watch>

  <watch>
    <get property="class"/>
    <set elem="class-class"/>
  </watch>

  <watch>
    <get property="enabled"/>
    <set elem="enabled-class" value="input ? '' : 'disabled'"/>
  </watch>

</component>
