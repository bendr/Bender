<component xmlns="http://bender.igel.co.jp">

  <property name="placeholder"/>
  <property name="value"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:input id="input" aria-role="textbox"/>
  </view>

  <watch>
    <get property="placeholder"/>
    <set elem="input" attr="placeholder"/>
  </watch>

  <watch>
    <get property="value"/>
    <set elem="input" property="value"/>
  </watch>

  <watch>
    <get elem="input" dom-event="change"/>
    <get elem="input" dom-event="blur"/>
    <set property="value" value="this.rendered.input.value"/>
  </watch>

</component>
