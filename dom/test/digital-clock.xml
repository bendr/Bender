<component xmlns="http://bender.igel.co.jp" href="clock.xml">

  <link rel="stylesheet" href="digital-clock.css"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div class="clock">
      <text id="h"/>:<text id="m"/>:<text id="s"/>
    </html:div>
  </view>

  <watch>
    <get property="h"/>
    <set select="@h" dom-property="textContent"
      value="flexo.pad(input | 0, 2)"/>
  </watch>

  <watch>
    <get property="m"/>
    <set select="@m" dom-property="textContent"
      value="flexo.pad(input | 0, 2)"/>
  </watch>

  <watch>
    <get property="s"/>
    <set select="@s" dom-property="textContent"
      value="flexo.pad(input | 0, 2)"/>
  </watch>

</component>
