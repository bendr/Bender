<component xmlns="http://bender.igel.co.jp">

  <property name="palette" as="json" value='["#ff6a4d", "#0b486b", "#5eb26b",
    "#774f38","#f8ca00","#9e0b46","#a61416", "#ffffff", "#000000"]'/>
  <property name="bgcolor"/>
  <property name="fgcolor"/>
  <property name="sides"/>

  <view xmlns:svg="http://www.w3.org/2000/svg">
    <svg:svg viewBox="0 0 128 128">
      <svg:rect id="rect" width="128" height="128" rx="16" ry="16"/>
      <svg:g transform="translate(64, 64)" stroke-width="16"
        stroke-linejoin="round">
        <svg:polygon id="polygon">
          <svg:animateTransform attributeName="transform" attributeType="XML"
            type="rotate" from="160" to="0" dur="0.5s" additive="sum"
            id="anim_p"/>
        </svg:polygon>
        <svg:g id="b" stroke-linecap="round" fill="none">
          <svg:line x1="-20" y1="-50" x2="-20" y2="0"/>
          <svg:circle r="20"/>
          <svg:animateTransform attributeName="transform" attributeType="XML"
            type="scale" from="0" to="1" dur="0.4s" fill="freeze" id="anim_b"/>
        </svg:g>
      </svg:g>
    </svg:svg>
  </view>

  <watch>
    <get event="@rendered"/>
    <set property="sides" value="flexo.random_int(5, 9)"/>
  </watch>

  <watch>
    <get property="palette"/>
    <set property="bgcolor"
      value="this.get_property('bgcolor') || flexo.random_element($$)"/>
    <set property="fgcolor">
      if (this.get_property("fgcolor")) {
        return this.get_property("fgcolor");
      }
      var p = $$.slice();
      flexo.remove_from_array(p, this.get_property("bgcolor"));
      return flexo.random_element(p);
    </set>
  </watch>

  <watch>
    <get property="fgcolor"/>
    <set elem="polygon" attr="fill"/>
    <set elem="polygon" attr="stroke"/>
  </watch>

  <watch>
    <get property="sides"/>
    <set elem="polygon" attr="points"
      value="flexo.poly_points($$, 42, flexo.random_int(0, 360))"/>
  </watch>

  <watch>
    <get property="bgcolor"/>
    <set elem="rect" attr="fill"/>
    <set elem="b" attr="stroke"/>
  </watch>

</component>
