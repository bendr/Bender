<component xmlns="http://bender.igel.co.jp">
  <property name="first-name" value="Bender"/>
  <property name="last-name" value="Rodriguez"/>
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>
      <html:label>
        First name:
        <component href="text-input.xml" id="first-input"/>
      </html:label>
    </html:p>
    <html:p>
      <html:label>
        Last name:
        <component href="text-input.xml" id="last-input"/>
      </html:label>
    </html:p>
    <html:p>
      Full name: <text id="first"/> <text id="last"/>
    </html:p>
  </view>

  <watch>
    <get property="first-name"/>
    <set elem="first"/>
    <set component="first-input" property="value"/>
  </watch>

  <watch>
    <get component="first-input" property="value"/>
    <set property="first-name"/>
  </watch>

  <watch>
    <get property="first-name"/>
    <set elem="first"/>
  </watch>

  <watch>
    <get property="last-name"/>
    <set elem="last"/>
    <set component="last-input" property="value"/>
  </watch>

  <watch>
    <get component="last-input" property="value"/>
    <set property="last-name"/>
  </watch>

  <watch>
    <get property="last-name"/>
    <set elem="last"/>
  </watch>

</component>
