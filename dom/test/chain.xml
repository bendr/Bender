<component xmlns="http://bender.igel.co.jp" id="chain">
  <property name="count" as="number" value="0"/>
  <property name="next" as="dynamic" value="`count + 1"/>
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>
      Number of clicks: <text id="clicks"/> (next: <text id="clicks-next"/>)
    </html:p>
    <!--
    <html:p>
      <component href="../lib/button.xml" id="plus">
        <view>
          +1
        </view>
      </component>
    </html:p>
    -->
  </view>
  <watch>
    <get property="next"/>
    <set elem="clicks-next"/>
  </watch>
  <watch>
    <get property="count"/>
    <set elem="clicks"/>
  </watch>
  <!--
  <watch>
    <get component="plus" event="!pushed"/>
    <set property="count" value="this.properties.count + 1"/>
  </watch>
  -->
</component>
