<component xmlns="http://bender.igel.co.jp" id="checkbox-test">

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>
      <component href="../lib/check-box.xml" id="ch">
        <view>
          Check me out!
        </view>
      </component>
    </html:p>
    <html:p>
      Am I checked? <text id="selected"/>
    </html:p>
    <html:p>
      <component href="../lib/button.xml" id="b">
        <view>
          Toggle
        </view>
      </component>
      <component href="../lib/button.xml" id="e">
        <property name="class" value="#ch`enabled ? 'hidden' : ''"/>
        <view>
          Enable
        </view>
      </component>
      <component href="../lib/button.xml" id="d">
        <property name="class" value="#ch`enabled ? '' : 'hidden'"/>
        <view>
          Disable
        </view>
      </component>
    </html:p>
  </view>

  <watch>
    <get select="#ch" property="checked"/>
    <set select="@selected" dom-property="textContent"
      value="input ? 'yes' : 'no'"/>
  </watch>

  <watch>
    <get select="#b" event="!pushed"/>
    <set select="#ch" property="checked"
      value="!scope['#ch'].properties.checked"/>
  </watch>

  <watch>
    <get select="#e" event="!pushed" value="true"/>
    <get select="#d" event="!pushed" value="false"/>
    <set select="#b" property="enabled"/>
    <set select="#ch" property="enabled"/>
  </watch>

</component>
