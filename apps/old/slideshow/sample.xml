<app xmlns="http://bender.igel.co.jp" xmlns:e="http://bender.igel.co.jp/e"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Sample Bender Slideshow</title>
  <stylesheet>
    body { background-color: #187757; }
    .slide { width: 1024px; height: 768px; }
  </stylesheet>
  <script href="slideshow.js"/>
  <include href="slide.xml"/>
  <controller instance-of="slideshow"/>

  <view>

    <component ref="slide" e:class="title">
      <html:h1>Sample slide show</html:h1>
    </component>

    <component ref="slide">
      <html:h2>Navigating the slide show</html:h2>
      <html:p>You can navigate by clicking anywhere on the slide (next slide),
        clicking and dragging forward or backward for next or previous slide,
        using the right and left arrow keys, space, return, backspace to go
        back and esc to go to the beginning.</html:p>
    </component>

  </view>
</app>
