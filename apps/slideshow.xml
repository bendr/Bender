<app xmlns="http://bender.igel.co.jp" xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Bender Slideshow</title>
  <stylesheet>
    body { background-color: #187757; }
  </stylesheet>

  <component id="slide">
    <stylesheet>
      .slide { width: 1024px; height: 768px; background-color: white; }
      .hidden { display: none; }
    </stylesheet>
    <view>
      <html:div class="slide">
        <content/>
      </html:div>
    </view>
  </component>

  <view>

    <component ref="slide">
      <html:h1>This is the first slide</html:h1>
    </component>

    <component ref="slide">
      <html:h1>This is the second slide</html:h1>
    </component>

  </view>
</app>
