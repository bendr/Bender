<component xmlns="http://bender.igel.co.jp">
  <property name="x" as="number" value="0"/>
  <property name="y" as="number" value="0"/>
  <property name="size" as="number" value="20"/>
  <property name="r" value="`size / 4"/>
  <property name="cx" value="`size * `x + `size / 2"/>
  <property name="cy" value="`size * `y + `size / 2"/>
  <view xmlns:svg="http://www.w3.org/2000/svg">
    <svg:circle cx="`cx" cy="`cy" r="`r" fill="#a61416"/>
  </view>
</component>

