<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Sample Bender Slideshow</title>
  <stylesheet>
    body { background-color: #187757; }
    .slide { width: 1024px; height: 768px; }
  </stylesheet>
  <script href="slideshow.js"/>
  <include href="slide.xml"/>
  <controller instance-of="slideshow">
    <listen source="num" event="@change">
      this.show_slide(event.value - 1);
    </listen>
  </controller>

  <view>

    <component ref="slide">
      <html:h1>This is the first slide</html:h1>
    </component>

    <component ref="slide">
      <html:h1>This is the second slide</html:h1>
    </component>

    <component href="num.xml#num" id="num"/>

  </view>
</app>
