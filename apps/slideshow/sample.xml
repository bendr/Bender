<app xmlns="http://bender.igel.co.jp" xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Sample Bender Slideshow</title>
  <stylesheet>
    body { background-color: #187757; }
    .slide { width: 1024px; height: 768px; }
  </stylesheet>
  <script href="slideshow.js"/>
  <include href="slide.xml"/>
  <controller instance-of="slideshow"/>
  <view>

    <component ref="slide">
      <html:h1>This is the first slide</html:h1>
    </component>

    <component ref="slide">
      <html:h1>This is the second slide</html:h1>
    </component>

  </view>
</app>
