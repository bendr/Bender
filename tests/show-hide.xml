<app xmlns="http://bender.igel.co.jp" xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:b="http://bender.igel.co.jp/b" xmlns:e="http://bender.igel.co.jp/e">

  <title>Show and hide components</title>

  <import href="../lib/push-button.xml"/>

  <view>
    <html:p>
      <use href="#button" id="show-button" b:enabled="false">Show</use>
      <use href="#button" id="hide-button">Hide</use>
    </html:p>
  </view>

  <watch>
    <get view="hide-button" event="@pushed"/>
    <set view="hide-button" property="visible" b:return="false"/>
  </watch>

  <watch>
    <get view="show-button" event="@pushed"/>
    <set view="hide-button" property="visible" b:return="true"/>
  </watch>

  <watch>
    <get view="hide-button" property="visible"/>
    <set view="show-button" property="enabled">
      return !value;
    </set>
  </watch>

</app>
