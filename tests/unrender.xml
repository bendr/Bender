<app xmlns="http://bender.igel.co.jp" xmlns:e="http://bender.igel.co.jp/e"
  xmlns:html="http://www.w3.org/1999/xhtml" e:value="initial value">
  <title>Scope tests/Remove (with unrender event)</title>
  <view>
    <html:p>Value: <html:input type="text" id="v"/></html:p>
    <use ref="nested"/>
  </view>
  <watch>
    <get property="value"/>
    <set view="v" property="value"/>
  </watch>
  <watch>
    <get view="v" event="change">
      return value.target.value;
    </get>
    <set property="value"/>
  </watch>
  <component id="nested">
    <view>
      <html:p>
        (Nested) Value: <html:input type="text" id="v"/>
        <use href="button.xml" id="remove">Remove</use>
      </html:p>
    </view>
    <watch>
      <get property="value"/>
      <set view="v" property="value"/>
    </watch>
    <watch>
      <get view="v" event="change">
        return value.target.value;
      </get>
      <set property="value"/>
    </watch>
    <watch>
      <get use="remove" event="@pushed">
        flexo.safe_remove(this.use);
      </get>
    </watch>
    <watch>
      <get use="$self" event="@unrender">
        alert("Farewell!");
      </get>
    </watch>
  </component>
</app>
