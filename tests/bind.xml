<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml" f:tabindex="1" f:tabindex-u="2">
  <title>Bind a value to a DOM node attribute</title>
  <view>
    <html:p>
      <html:input type="text" id="t" value="I'm bound!" tabindex="{tabindex}"/>
      <html:input type="text" id="u" value="I'm not!"/>
    </html:p>
  </view>
  <watch>
    <get view="u" attr="tabindex"/>
    <set property="tabindex-u"/>
  </watch>
  <watch>
    <get property="tabindex-u"/>
    <set view="u" attr="tabindex"/>
  </watch>
</app>
