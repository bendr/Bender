<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml" f:tabindex="1">
  <title>Watch a DOM node attribute</title>
  <view>
    <html:p><html:input id="t" type="text" value="Hello"/></html:p>
    <html:p>Tabindex = <html:span id="tabindex"/></html:p>
  </view>
  <watch>
    <get property="tabindex"/>
    <set view="t" attr="tabindex"/>
  </watch>
  <watch>
    <get view="t" attr="tabindex"/>
    <set view="tabindex"/>
  </watch>
</app>
