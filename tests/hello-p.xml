<app xmlns="http://bender.igel.co.jp" xmlns:p="http://bender.igel.co.jp/p"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Hello, world with p:aram</title>
  <use ref="hello" p:class="bold"/>
  <use ref="hello" p:msg="Goodbye, everyone."/>
  <component id="hello" p:class="" p:msg="Hello, world!">
    <view>
      <target q="head" once="true">
        <html:style>
          .bold { font-weight: bold; }
        </html:style>
      </target>
      <html:p class="{class}">
        My message is: "{msg}"
      </html:p>
    </view>
  </component>
</app>
