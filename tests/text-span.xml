<app xmlns="http://bender.igel.co.jp" xmlns:e="http://bender.igel.co.jp/e"
  xmlns:p="http://bender.igel.co.jp/p"
  xmlns:html="http://www.w3.org/1999/xhtml" e:name="name" e:value="value">
  <title>Parametrized component</title>

  <view>
    <html:p>
      <use ref="text-span" p:text="name"/>
      =
      <use ref="text-span" p:text="value"/>
    </html:p>
  </view>

  <component id="text-span">
    <view>
      <html:span id="span"/>
    </view>
    <watch>
      <get use="$parent" property="{text}"/>
      <set view="span"/>
    </watch>
  </component>

</app>
