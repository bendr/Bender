<app xmlns="http://bender.igel.co.jp" xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:e="http://bender.igel.co.jp/e" e:first-name="Bert"
  e:last-name="Bertington">

  <!-- FIXME setting caps does not properly update the last name box (but it
       does the full name display -->

  <title>Knockout tutorial ported to Bender</title>
  <desc>From http://learn.knockoutjs.com/#/?tutorial=intro</desc>

  <view>
    <html:p>Full name: <html:span id="full-name"/></html:p>
    <html:p>First name: <html:input type="text" id="first-name"/></html:p>
    <html:p>Last name: <html:input type="text" id="last-name"/></html:p>
    <html:p><html:button id="button">Go Caps</html:button></html:p>
  </view>

  <watch>
    <get property="first-name"/>
    <set view="first-name" attr="value"/>
  </watch>

  <watch>
    <get property="last-name"/>
    <set view="last-name" attr="value"/>
  </watch>

  <watch>
    <get view="first-name" dom-event="change">
      return value.target.value;
    </get>
    <set property="first-name"/>
  </watch>

  <watch>
    <get view="last-name" dom-event="change">
      return value.target.value;
    </get>
    <set property="last-name"/>
  </watch>

  <watch>
    <get property="first-name"/>
    <get property="last-name"/>
    <set view="full-name">
      return this.$firstName + " " + this.$lastName;
    </set>
  </watch>

  <watch>
    <get view="button" dom-event="click"/>
    <set property="last-name">
      return previous_value.toUpperCase();
    </set>
  </watch>

</app>
