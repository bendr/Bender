<app xmlns="http://bender.igel.co.jp" xmlns:html="http://www.w3.org/1999/xhtml"
  xmlns:b="http://bender.igel.co.jp/b" xmlns:f="http://bender.igel.co.jp/f">

  <title>Checkbox test</title>

  <view>
    <html:p>
      <use href="../lib/checkbox.xml#checkbox" id="c">Check</use>
    </html:p>
    <html:p>Checked? <html:span id="status"/></html:p>
  </view>

  <watch>
    <get view="c" property="checked">
      flexo.log("Checked ? {0}".fmt(value), this);
      return value;
    </get>
    <!-- FIXME this get called with the checkbox instance, and not the app
         instance, so the status view is out of scope.
    <set view="status">
      return value ? "yes" : "no";
    </set>
    -->
  </watch>

</app>
