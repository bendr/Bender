<app xmlns="http://bender.igel.co.jp"
  xmlns:b="http://bender.igel.co.jp/b" xmlns:f="http://bender.igel.co.jp/f">
  <title>Render components with no view</title>

  <use id="timer" href="../lib/timer.xml#timer" b:on="true"/>

  <component id="blinker" b:on="false">
    <view>
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="-100 -100 200 200">
        <circle id="c" r="100"/>
      </svg>
    </view>
    <watch>
      <get property="on"/>
      <set view="c" attr="fill">
        return value ? "8f0" : "#ff4040";
      </set>
    </watch>
  </component>

  <view>
    <use href="#blinker" id="blinker"/>
  </view>

  <watch>
    <get use="timer" event="@tick"/>
    <set view="blinker" property="on">
      return !this.views.blinker.$on;
    </set>
  </watch>

</app>
