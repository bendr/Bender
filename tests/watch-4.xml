<app xmlns="http://bender.igel.co.jp" xmlns:e="http://bender.igel.co.jp/e"
  xmlns:html="http://www.w3.org/1999/xhtml" e:value="initial value">
  <title>Watch a component property and set a view accordingly</title>
  <view>
    <html:p><html:code>$value</html:code> = <html:span id="v"
        style="padding: 2px; background-color:#08f; color:white"/></html:p>
    <html:p><html:span style="padding: 2px; background-color:#08f; color:white"
        id="v2"/> = <html:code>eulav$</html:code></html:p>
    <html:p><html:span style="padding: 2px; background-color:#08f; color:white"
        id="v3"/> = <html:code>eulav$</html:code></html:p>
  </view>
  <watch>
    <get property="value">
      return [].splice.call(value, 0).reverse().join("");
    </get>
    <set view="v2"/>
    <set view="v3"/>
  </watch>
  <!-- Be careful of oredering here: if we exchange the two watches, the final
       value will be reversed! -->
  <watch>
    <get property="value"/>
    <set view="v"/>
  </watch>
</app>
