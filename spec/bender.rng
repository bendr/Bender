<?xml version="1.0"?>
<grammar xmlns="http://relaxng.org/ns/structure/1.0"
  datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes"
  ns="http://bender.igel.co.jp">

  <start>
    <ref name="component"/>
  </start>

  <define name="attribute">
    <element name="attribute">
      <optional>
        <ref name="id"/>
      </optional>
      <optional>
        <ref name="ns"/>
      </optional>
      <ref name="name"/>
      <mixed>
        <zeroOrMore>
          <ref name="text"/>
        </zeroOrMore>
      </mixed>
    </element>
  </define>

  <define name="component">
    <element name="component">
      <optional>
        <ref name="id"/>
      </optional>
      <optional>
        <ref name="href-component"/>
      </optional>
      <interleave>
        <zeroOrMore>
          <ref name="link"/>
        </zeroOrMore>
        <zeroOrMore>
          <ref name="view"/>
        </zeroOrMore>
        <zeroOrMore>
          <ref name="property"/>
        </zeroOrMore>
        <zeroOrMore>
          <ref name="watch"/>
        </zeroOrMore>
      </interleave>
    </element>
  </define>

  <define name="content">
    <element name="content">
      <optional>
        <ref name="id"/>
      </optional>
      <ref name="view-content"/>
    </element>
  </define>

  <define name="foreign-view-content">
    <element>
      <anyName>
        <except>
          <nsName/>
        </except>
      </anyName>
      <zeroOrMore>
        <attribute>
          <anyName/>
        </attribute>
      </zeroOrMore>
      <ref name="view-content"/>
    </element>
  </define>

  <define name="get">
    <element name="get">
      <choice>
        <ref name="get-property"/>
        <ref name="get-dom-event"/>
        <ref name="get-event"/>
      </choice>
      <optional>
        <choice>
          <ref name="value"/>
          <text/>
        </choice>
      </optional>
    </element>
  </define>

  <define name="get-property">
    <optional>
      <ref name="component-ref"/>
    </optional>
    <ref name="property-ref"/>
  </define>

  <define name="get-dom-event">
    <ref name="view-ref"/>
    <ref name="dom-event"/>
  </define>

  <define name="get-event">
    <optional>
      <ref name="component-ref"/>
    </optional>
    <ref name="event"/>
  </define>


  <define name="link">
    <element name="link">
      <ref name="rel"/>
      <ref name="href-link"/>
    </element>
  </define>

  <define name="property">
    <element name="property">
      <ref name="property-name"/>
      <ref name="value"/>
      <optional>
        <ref name="as"/>
      </optional>
    </element>
  </define>

  <define name="set">
    <element name="set">
      <choice>
        <ref name="set-property"/>
        <ref name="set-event"/>
        <ref name="set-dom-attribute"/>
        <ref name="set-dom-property"/>
      </choice>
      <optional>
        <choice>
          <ref name="value"/>
          <text/>
        </choice>
      </optional>
    </element>
  </define>

  <define name="set-property">
    <optional>
      <ref name="component-ref"/>
    </optional>
    <ref name="property-ref"/>
  </define>

  <define name="set-event">
    <optional>
      <ref name="component-ref"/>
    </optional>
    <ref name="event"/>
  </define>

  <define name="set-dom-attribute">
    <ref name="view-ref"/>
    <ref name="ns"/>
    <ref name="attr"/>
  </define>

  <define name="set-dom-property">
    <ref name="view-ref"/>
    <optional>
      <ref name="property-dom-ref"/>
    </optional>
  </define>

  <define name="text">
    <element name="text">
      <optional>
        <ref name="id"/>
      </optional>
      <text/>
    </element>
  </define>

  <define name="view">
    <element name="view">
      <optional>
        <ref name="id"/>
      </optional>
      <optional>
        <ref name="stack"/>
      </optional>
      <mixed>
        <zeroOrMore>
          <ref name="foreign-view-content"/>
        </zeroOrMore>
        <zeroOrMore>
          <ref name="component"/>
        </zeroOrMore>
        <zeroOrMore>
          <ref name="text"/>
        </zeroOrMore>
        <zeroOrMore>
          <ref name="content"/>
        </zeroOrMore>
      </mixed>
    </element>
  </define>

  <define name="view-content">
    <mixed>
      <zeroOrMore>
        <ref name="attribute"/>
      </zeroOrMore>
      <zeroOrMore>
        <ref name="component"/>
      </zeroOrMore>
      <optional>
        <ref name="content"/>
      </optional>
      <zeroOrMore>
        <ref name="foreign-view-content"/>
      </zeroOrMore>
      <zeroOrMore>
        <ref name="text"/>
      </zeroOrMore>
    </mixed>
  </define>

  <define name="watch">
    <element name="watch">
      <zeroOrMore>
        <ref name="get"/>
      </zeroOrMore>
      <zeroOrMore>
        <ref name="set"/>
      </zeroOrMore>
    </element>
  </define>



  <define name="as">
    <attribute name="as">
      <choice>
        <value>boolean</value>
        <value>dynamic</value>
        <value>json</value>
        <value>number</value>
        <value>string</value>
      </choice>
    </attribute>
  </define>

  <define name="attr">
    <attribute name="attr">
      <data type="token"/>
    </attribute>
  </define>

  <define name="component-ref">
    <attribute name="component">
      <data type="token"/>
    </attribute>
  </define>

  <define name="dom-event">
    <attribute name="dom-event">
      <data type="token"/>
    </attribute>
  </define>

  <define name="event">
    <attribute name="event">
      <data type="token"/>
    </attribute>
  </define>

  <define name="href-component">
    <attribute name="href">
      <data type="anyURI"/>
    </attribute>
  </define>

  <define name="href-link">
    <attribute name="href">
      <data type="anyURI"/>
    </attribute>
  </define>

  <define name="id">
    <attribute name="id">
      <data type="ID"/>
    </attribute>
  </define>

  <define name="name">
    <attribute name="name">
      <data type="token"/>
    </attribute>
  </define>

  <define name="ns">
    <attribute name="ns">
      <data type="anyURI"/>
    </attribute>
  </define>

  <define name="property-name">
    <attribute name="name"/>
  </define>

  <define name="property-ref">
    <attribute name="property"/>
  </define>

  <define name="property-dom-ref">
    <attribute name="property"/>
  </define>

  <define name="rel">
    <attribute name="rel">
      <choice>
        <value>script</value>
        <value>stylesheet</value>
      </choice>
    </attribute>
  </define>

  <define name="stack">
    <attribute name="stack">
      <choice>
        <value>top</value>
        <value>bottom</value>
        <value>replace</value>
      </choice>
    </attribute>
  </define>

  <define name="value">
    <attribute name="value"/>
  </define>

  <define name="view-ref">
    <attribute name="elem">
      <data type="token"/>
    </attribute>
  </define>

</grammar>
