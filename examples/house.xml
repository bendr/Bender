<component xmlns="http://bender.igel.co.jp"
  xmlns:svg="http://www.w3.org/2000/svg">
  <title>A house in SVG</title>
  <property name="wall-color" value="#e1e4c4"/>
  <property name="facade-color" value="#b1c1a6"/>
  <property name="roof-color" value="#850d1b"/>
  <property name="door-color" value="#574632"/>
  <view>
    <svg:svg viewBox="0 0 100 100">
      <svg:g transform="translate(20, 90)" stroke-linejoin="round">
        <svg:polygon points="0,0 20,0 20,-40 10,-80 0,-40"
          fill="{facade-color}" stroke="{facade-color}"/>
        <svg:path d="M6,0 L14,0 L14,-24 L6,-24" fill="{door-color}" stroke="{door-color}"/>
        <svg:rect x="20" y="-40" width="40" height="40" fill="{wall-color}"
          stroke="{wall-color}"/>
        <svg:polygon points="10,-80 50,-80 60,-40 20,-40"
          fill="{roof-color}" stroke="{roof-color}"/>
      </svg:g>
    </svg:svg>
  </view>
</component>
