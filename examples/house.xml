<component xmlns="http://bender.igel.co.jp"
  xmlns:svg="http://www.w3.org/2000/svg">
  <title>A house in SVG</title>
  <property name="façade-darkness" value="0.25"/>
  <property name="door-color" value="#574632"/>
  <property name="wall-color" value="#e1e4c4"/>
  <property name="roof-color" value="#850d1b"/>
  <property name="x" type="number" value="20"/>
  <property name="y" type="number" value="90"/>
  <property name="height" type="number" value="80"/>
  <property name="width" type="number" value="60"/>
  <property name="x_off" type="dynamic" value="flexo.random_int(-15, 10)"/>
  <property name="x_mid" type="dynamic" value="flexo.random_int(10, 20)"/>
  <property name="x_m" type="dynamic" value="({x_off} + {x_mid}) / 2"/>
  <property name="y_off" type="dynamic" value="flexo.random_int(-20, 5)"/>
  <property name="y_mid" type="dynamic" value="flexo.random_int(-50, -30)"/>
  <property name="w" type="dynamic"
    value="{width} - flexo.random_int(-10, 10) - {x_mid}"/>
  <property name="h" type="dynamic"
    value="flexo.random_int(-10, 10) - {height}"/>
  <view>
    <svg:g transform="translate({x}, {y})" stroke-linejoin="round">
      <svg:polygon points="{x_off},{y_off} {x_mid},{y_off} {x_mid},{y_mid}
        {x_m},{h} {x_off},{y_mid}" fill="{wall-color}"/>
      <svg:polygon points="{x_off},{y_off} {x_mid},{y_off} {x_mid},{y_mid}
        {x_m},{h} {x_off},{y_mid}" fill="black"
        fill-opacity="{façade-darkness}"/>
      <!--
      <svg:path d="M6,0 L14,0 L14,-24 A4,4 180 0,0 6,-24 Z"
        fill="{door-color}"/>
        -->
      <svg:rect x="{x_mid}" y="{y_mid}" width="{w}"
        height="{ {y_off} - {y_mid} }" fill="{wall-color}"/>
      <svg:polygon points="{x_m},{h} { {x_m} + {w} },{h}
        { {x_mid} + {w} },{y_mid} {x_mid},{y_mid}" fill="{roof-color}"/>
    </svg:g>
  </view>
</component>
