  <controller id="metro" instance-of="bender.metro" f:rate-ms="333">
    <listen event="@rendered">
      this.bang();
    </listen>
  </controller>
  <controller>
    <script>
      $_.init = function() { this.component.time = new Date(); };
      $_.rendered = function() {};
    </script>
    <listen event="@rendered" handler="rendered"/>
    <listen controller="metro" event="@bang">
      this.component.time = new Date();
    </listen>
  </controller>
