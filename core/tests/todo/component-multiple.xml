<app xmlns="http://bender.igel.co.jp" xmlns:e="http://bender.igel.co.jp/e"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Mulitple components</title>
  <include href="button-component.xml"/>
  <update>
    <get view="ok-button" event="@pushed"/>
    <get view="cancel-button" event="@pushed"/>
    <set>
      alert(event.source.message);
    </set>
  </update>
  <view>
    <html:p>
      Click this button:
      <component ref="button" id="ok-button" e:message="ok">OK</component>
      or this button:
      <component ref="button" id="cancel-button"
        e:message="cancel">Cancel</component>.
    </html:p>
  </view>
</app>
