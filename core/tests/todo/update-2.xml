<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml" f:n="123">
  <title>Updating two views on a value change with a transform function</title>
  <update>
    <get property="n"/>
    <set property="n"/>
    <set view="num"/>
    <set view="roman">
      return flexo.to_roman(value) || "unknown";
    </set>
  </update>
  <view>
    <html:p>
      <html:span id="num"/> is <html:strong id="roman"/> in roman numerals.
    </html:p>
  </view>
</app>
