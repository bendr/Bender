<app xmlns="http://bender.igel.co.jp" xmlns:b="http://bender.igel.co.jp/b"
  xmlns:html="http://www.w3.org/1999/xhtml" b:on="true">
  <title>Update on button press</title>
  <update>
    <get property="on"/>
    <set property="on"/>
    <set view="on">
      return value ? "on" : "off";
    </set>
  </update>
  <update>
    <get view="button" event="@pushed"/>
    <set property="on">
      return !view.on;
    </set>
  </update>
  <view>
    <html:p>
      Currently <html:strong id="on"/>
    </html:p>
    <html:p>
      <component id="button" href="../../../lib/button.xml">Toogle</component>
    </html:p>
  </view>
</app>
