<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Button component test</title>
  <include href="../../lib/button.xml"/>
  <controller>
    <listen source="ok-button" event="@pushed">
      alert("OK");
    </listen>
  </controller>
  <root-view>
    <html:p>
      Click this button: <component ref="button" id="ok-button"
        f:tabindex="-1">OK</component>
    </html:p>
  </root-view>
</app>
