<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml" f:n="0">
  <title>Watch: display a value from the component in two different ways</title>
  <view>
    <html:p><html:em id="arabic"/> = <html:strong id="roman"/></html:p>
    <html:p>Set <html:code>$APP.n</html:code> from the console to change
      this value (when run in debug mode.)</html:p>
  </view>
  <watch>
    <get property="n"/>
    <set view="arabic"/>
    <set view="roman">
      return flexo.to_roman(value) || "unknown";
    </set>
  </watch>
</app>
