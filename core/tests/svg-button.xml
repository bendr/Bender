<app xmlns="http://bender.igel.co.jp" xmlns:bender="http://bender.igel.co.jp"
  xmlns:svg="http://www.w3.org/1999/svg">
  <title>SVG button test (reuse)</title>

  <component id="svg-button">
    <view>
      <svg:defs bender:reuse="any" bender:render-once="true">
        <svg:linearGradient id="button_surface" x1="1" x2="1" y1="0" y2="1"
          gradientUnits="objectBoundingBox">
          <svg:stop stop-color="#444" offset="0"/>
          <svg:stop stop-color="#000" offset="0.67"/>
        </svg:linearGradient>
        <svg:linearGradient id="pushed_surface" x1="1" x2="1" y1="0" y2="1"
          gradientUnits="objectBoundingBox">
          <svg:stop stop-color="#ff0" offset="0"/>
          <svg:stop stop-color="#f80" offset="0.67"/>
        </svg:linearGradient>
        <svg:linearGradient id="disabled_surface" x1="1" x2="1" y1="0" y2="1"
          gradientUnits="objectBoundingBox">
          <svg:stop stop-color="#fff" offset="0"/>
          <svg:stop stop-color="#aaa" offset="0.67"/>
        </svg:linearGradient>
        <svg:linearGradient id="virtual_light" gradientUnits="objectBoundingBox"
          x1="0" x2="0" y1="0" y2="1">
          <svg:stop stop-color="#eee" offset="0" stop-opacity=".8"/>
          <svg:stop stop-color="#eee" offset="1" stop-opacity="0"/>
        </svg:linearGradient>
      </svg:defs>
      <svg:g id="frame">
        <svg:rect id="bg" rx="5" ry="5" fill="url(#button_surface)"
          stroke="#363636"/>
        <svg:g id="content">
          <content/>
        </svg:g>
        <svg:rect id="light" x="2" y="2" rx="4" ry="4"
          fill="url(#virtual_light)" stroke="#FFFFFF" stroke-opacity="0.4"/>
        <svg:rect id="target" fill-opacity="0"/>
      </svg:g>
    </view>
  </component>

  <view>
    <svg:svg>
      <component ref="svg-button" id="button"/>
    </svg:svg>
  </view>

</app>
