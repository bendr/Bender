<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Multiple binding test</title>
  <bind value="x">
    <view ref="x" property="value" event="@change"/>
    <view ref="sum">
      return this.x + this.y;
    </view>
  </bind>
  <bind value="y">
    <view ref="y" property="value" event="@change"/>
    <view ref="sum"/>
  </bind>
  <view>
    <html:p>
      <component href="../../lib/integer.xml#integer" id="x"/> +
      <component href="../../lib/integer.xml#integer" id="y"/> =
      <html:span id="sum"/>
    </html:p>
  </view>
</app>
