<app xmlns="http://bender.igel.co.jp" xmlns:f="http://bender.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <title>Multiple binding test</title>
  <bind>
    <update view="x" property="value" event="@change"/>
    <set view="sum">
      return this.x.value + this.y.value;
    </set>
  </bind>
  <bind>
    <update view="y" property="value" event="@change"/>
    <touch view="sum"/>
  </bind>
  <view>
    <html:p>
      <component href="../../lib/integer.xml#integer" id="x"/> +
      <component href="../../lib/integer.xml#integer" id="y"/> =
      <html:span id="sum"/>
    </html:p>
  </view>
</app>
