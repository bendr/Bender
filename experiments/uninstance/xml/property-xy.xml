<component xmlns="http://bender.igel.co.jp" id="A">
  <property name="x"/>
  <property name="y"/>
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>
      x = <text id="x"/>, y = 2<html:sup>x</html:sup> - 1 = <text id="y"/>
    </html:p>
    <content/>
  </view>
  <watch>
    <get property="x"/>
    <set select="@x" property="text"/>
    <set property="y" value="Math.pow(2, $in) - 1"/>
  </watch>
  <watch>
    <get property="y"/>
    <set select="@y" property="text"/>
  </watch>
</component>
