<component xmlns="http://bender.igel.co.jp" id="hello">
  <view xmlns:svg="http://www.w3.org/2000/svg">
    <svg:svg viewBox="0 0 400 300">

      <svg:text y="200">
        <text id="message">Hello</text>
      </svg:text>

      <!-- Inline attributes -->
      <svg:rect id="r1" x="50" y="100" width="200" height="150"
        fill="rgba(255, 127, 63, 0.5)"/>

      <!-- Using the <attribute> element -->
      <svg:rect id="r2">
        <attribute name="x" id="x"/>
        <attribute name="y">50</attribute>
        <attribute name="width">200</attribute>
        <attribute name="height">150</attribute>
        <attribute name="fill" id="fill">
          rgba(<text id="r">31</text>, <text id="g">159</text>,
          <text id="b">255</text>, <text id="a">0.5</text>)
        </attribute>
      </svg:rect>

    </svg:svg>
  </view>
</component>
