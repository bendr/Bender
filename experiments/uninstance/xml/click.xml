<component xmlns="http://bender.igel.co.jp" id="click">
  <style>
    .click {
      padding: 0.5rem 1rem;
      background-color: #ff4040;
      color: #f8f9f0;
      font-family: sans-serif;
      display: inline-block;
      cursor: pointer;
    }
  </style>
  <view xmlns:html="http://www.w3.org/1999/xhtml" render-id="class">
    <html:div class="click" id="b">
      Click me!
    </html:div>
  </view>
  <watch>
    <get select="@b" dom-event="click"/>
  </watch>
</component>
