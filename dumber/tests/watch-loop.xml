<app xmlns="http://dumber.igel.co.jp" xmlns:f="http://dumber.igel.co.jp/f"
  xmlns:html="http://www.w3.org/1999/xhtml" f:x="0">
  <title>Watch: chaining watches</title>
  <view>
    <html:p><html:code>x</html:code> = <html:code>z</html:code> - 3 =
      <html:em id="x"/></html:p>
    <html:p><html:code>y</html:code> = <html:code>x</html:code> + 1 =
      <html:em id="y"/></html:p>
    <html:p><html:code>z</html:code> = <html:code>y</html:code> * 2 =
      <html:em id="z"/></html:p>
  </view>
  <watch>
    <get property="x"/>
    <set view="x"/>
    <set property="y">
      return value + 1;
    </set>
  </watch>
  <watch>
    <get property="y"/>
    <set view="y"/>
    <set property="z">
      return value * 2;
    </set>
  </watch>
  <watch>
    <get property="z"/>
    <set view="z"/>
    <set property="x">
      return value - 3;
    </set>
  </watch>
</app>
