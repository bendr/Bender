<app xmlns="http://dumber.igel.co.jp" xmlns:p="http://dumber.igel.co.jp/p"
  xmlns:html="http://www.w3.org/1999/xhtml" p:value="initial value">
  <title>Watch a component property and set a view accordingly</title>
  <view>
    <html:p><html:code>value</html:code> = <html:span id="v"
        style="padding: 2px; background-color:#08f; color:white"/></html:p>
  </view>
  <watch>
    <get property="value"/>
    <set view="v"/>
  </watch>
</app>

