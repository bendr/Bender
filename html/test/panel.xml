<component xmlns="http://bender.igel.co.jp" id="panel">

  <property name="n" as="number" value="10"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>
      <component href="button.xml" id="minus">
        <view>
          Minus
        </view>
      </component>
      <component href="button.xml" id="plus">
        <view>
          Plus
        </view>
      </component>
      `n
    </html:p>
  </view>

  <watch>
    <get property="n"/>
    <set select="@minus" property="enabled" value="$in &gt; 0"/>
  </watch>

  <watch>
    <get property="n"/>
    <set select="@plus" property="enabled" value="$in &lt; 10"/>
  </watch>

  <watch>
    <get select="@minus" event="pushed"/>
    <set property="n" value="`n - 1"/>
  </watch>

  <watch>
    <get select="@plus" event="pushed"/>
    <set property="n" value="`n + 1"/>
  </watch>

</component>
