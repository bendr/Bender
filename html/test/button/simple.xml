<component xmlns="http://bender.igel.co.jp" id="simple">

  <link rel="stylesheet" href="button.css"/>

  <event name="pushed"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div id="div" class="button">
      <content>
        OK*
      </content>
    </html:div>
  </view>

  <watch>
    <get select="@div" dom-event="click"/>
    <set event="pushed"/>
  </watch>

</component>
