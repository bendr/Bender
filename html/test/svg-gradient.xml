  <property name="from" value="#ff6a4d"/>
  <property name="to" value="#fff"/>

  <view xmlns:svg="http://www.w3.org/2000/svg" render-id="id">
    <attribute name="viewBox">0 0 128 128</attribute>
    <svg:defs>
      <svg:linearGradient id="gradient">
        <svg:stop offset="5%" stop-color="`from"/>
        <svg:stop offset="95%" stop-color="`to"/>
      </svg:linearGradient>
    </svg:defs>
    <svg:rect x="4" y="4" width="120" height="120" fill="url(#gradient)"/>
  </view>

</component>
