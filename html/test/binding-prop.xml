<component xmlns="http://bender.igel.co.jp">
  <property name="x" as="number" value="1"/>
  <property name="y"/>
  <!--
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>x = `x</html:p>
    <html:p>y = x + 2 = `y</html:p>
  </view>
  -->
  <watch>
    <get property="x"/>
    <set property="y" value="$in + 2"/>
  </watch>
</component>
