<component xmlns="http://bender.igel.co.jp"
  xmlns:html="http://www.w3.org/1999/xhtml">
  <property name="view-content" as="xml">
    <html:p>
      Hello from an XML property!
    </html:p>
  </property>
  <view>
    <html:p>
      Hello below:
    </html:p>
  </view>
  <watch>
    <get property="view-content"/>
    <set select="$view" insert="last"/>
  </watch>
</component>
