<component xmlns="http://bender.igel.co.jp" id="A">
  <property name="x" value="2"/>
  <property name="foo" value="bar" as="string" select="$that"/>
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>x = <html:span id="vx">???</html:span></html:p>

    <component id="B">
      <property name="y" value="true"/>
      <view xmlns:html="http://www.w3.org/1999/xhtml">
        <html:p>y = <html:span id="vy">???</html:span></html:p>
      </view>
      <watch>
        <get property="y"/>
        <set select="@vy" dom-property="textContent"/>
      </watch>
    </component>

    <html:p>foo = <html:span id="vfoo">???</html:span></html:p>
  </view>
  <watch>
    <get property="x"/>
    <set select="@vx" dom-property="textContent"/>
    <set select="@B" property="y" value="$in + 2"/>
  </watch>
  <watch>
    <get property="foo"/>
    <set select="@vfoo" dom-property="textContent"/>
  </watch>
</component>
