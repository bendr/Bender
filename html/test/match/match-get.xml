<component xmlns="http://bender.igel.co.jp">
  <property name="on" as="boolean" value="false"/>
  <property name="ok" value="???" as="string"/>
  <view>
    <component href="../../lib/button.xml" id="button" enabled="false">
      <view>
        Toggle
      </view>
    </component>
    `ok
  </view>
  <watch>
    <get select="@button" event="pushed"/>
    <set property="on" value="!`on"/>
  </watch>
  <watch>
    <get property="on" match="$in"/>
    <set select="@button" property="enabled"/>
    <set property="ok" as="string" value="ok"/>
    <set>
      console.log("set %0 to true".fmt(this._idx));
    </set>
  </watch>
  <watch>
    <get property="on" match="!$in"/>
    <set property="ok" as="string" value="not ok"/>
    <set>
      console.log("set %0 to false".fmt(this._idx));
    </set>
  </watch>
</component>
