<component xmlns="http://bender.igel.co.jp" id="parent">
  <property name="x" as="number" value="42"/>
  <property name="z" value="@child`y.toUpperCase()"/>
  <view>
    [parent] `x = `z;
    <component id="child">
      <property name="y" value="flexo.safe_string(flexo.to_roman(@parent`x))"/>
      <view>
        [child] `y = @parent`x
      </view>
    </component>
  </view>
</component>
