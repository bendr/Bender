<component xmlns="http://bender.igel.co.jp" id="parent">
  <property name="x" as="number" value="42"/>
  <view>
    `x = @child`y;
    <component id="child">
      <property name="y"
        value="flexo.safe_string(flexo.to_roman(@parent`x)).toUpperCase()"/>
      <view>
        `y = @parent`x
      </view>
    </component>
  </view>
</component>
