<component xmlns="http://bender.igel.co.jp" id="r">
  <property name="ready" as="boolean" value="false"/>
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p>Ready ? <html:span id="ready"/></html:p>
  </view>
  <watch>
    <get property="ready"/>
    <set select="@ready" dom-property="textContent"/>
  </watch>
  <watch>
    <get event="ready"/>
    <set property="ready" value="true"/>
  </watch>
</component>
