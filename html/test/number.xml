<component xmlns="http://bender.igel.co.jp" id="C">
  <property name="n" as="number"/>
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:p><html:em>n</html:em> is a number and its value is `n.</html:p>
    <html:p>
      <component href="../lib/button.xml" id="plus">
        <view>+1</view>
      </component>
    </html:p>
  </view>
  <watch>
    <get event="ready"/>
    <set property="n" value="'7'"/>
  </watch>
  <watch>
    <get select="@plus" event="pushed"/>
    <set property="n" value="`n + 1"/>
  </watch>
</component>
