<component xmlns="http://bender.igel.co.jp" id="logo">

  <property name="palette" value='new flexo.Urn(["#ff6a4d", "#0b486b", "#5eb26b",
    "#774f38", "#f8ca00", "#9e0b46", "#a61416", "#222222", "#f8f9f0", "#4dbce9",
    "#06491d", "#f94179"])' select="$that"/>
  <property name="sides" value="flexo.random_int(5, 9)"/>
  <property name="bgcolor" value="`palette.pick()"/>
  <property name="fgcolor" value="`palette.pick()"/>
  <property name="points"
    value="flexo.poly_points(`sides, 42, flexo.random_int(0, 360))"/>
  <property name="clickable" as="boolean" value="true"/>

  <view xmlns:svg="http://www.w3.org/2000/svg">
    <svg:svg viewBox="0 0 128 128">
      <svg:rect x="4" y="4" width="120" height="120" rx="16" ry="16"
        fill="`bgcolor"/>
      <svg:g transform="translate(64, 64)" stroke-width="16"
        stroke-linejoin="round">
        <svg:polygon points="`points" fill="`fgcolor" stroke="`fgcolor">
          <svg:animateTransform attributeName="transform" attributeType="XML"
            type="rotate" from="160" to="0" dur="0.5s" additive="sum"
            id="anim_p"/>
        </svg:polygon>
        <svg:g id="b" stroke-linecap="round" fill="none" stroke="`bgcolor">
          <svg:line x1="-20" y1="-50" x2="-20" y2="0"/>
          <svg:circle r="20"/>
          <svg:animateTransform attributeName="transform" attributeType="XML"
            type="scale" from="0" to="1" dur="0.4s" fill="freeze" id="anim_b"/>
        </svg:g>
      </svg:g>
      <svg:rect id="mask" width="128" height="128" fill-opacity="0"/>
    </svg:svg>
  </view>

  <watch>
    <get select="@mask" dom-event="click" match="`clickable">
      this.scope["@anim_b"].beginElement();
      this.scope["@anim_p"].beginElement();
    </get>
  </watch>

</component>
