<component xmlns="http://bender.igel.co.jp" id="ticker">
  <link rel="script" href="lib.js"/>
  <property name="rate-ms" as="number" value="0"/>
  <property name="enabled" as="boolean" value="true"/>
  <event name="tick"/>
  <watch>
    <get property="rate-ms">
      flexo.fail(!`enabled);
      lib.timer.tick.call(this, $in);
    </get>
  </watch>
  <watch>
    <get property="enabled">
      if (!$in) {
        lib.timer.cancel.call(this);
      } else {
        lib.timer.tick.call(this, `(rate-ms));
      }
    </get>
  </watch>
</component>
