<component xmlns="http://bender.igel.co.jp" href="ui-elem.xml" id="canvas">

  <property name="base-class" as="string" value="canvas"/>
  <property name="width"/>
  <property name="height"/>
  <property name="stroke" as="string" value="black"/>
  <property name="stroke-width" as="number" value="1"/>
  <property name="bg"/>
  <property name="fg"/>
  <property name="down" as="boolean" value="false"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div class="`base\-class `class `enabled\-class"
      style="width:`(width)px;height:`(height)px">
      <html:canvas id="bg" width="`width" height="`height"/>
      <html:canvas id="fg" width="`width" height="`height"/>
    </html:div>
  </view>

  <watch>
    <get event="ready"/>
    <set property="bg" value="$scope['@bg'].getContext('2d')"/>
    <set property="fg" value="$scope['@fg'].getContext('2d')"/>
    <set>
      `fg.lineCap = "round";
      `fg.lineJoin = "round";
    </set>
  </watch>

  <watch>
    <get property="fg"/>
    <get property="stroke"/>
    <set>
      if (`fg) {
        `fg.strokeStyle = `stroke;
      }
    </set>
  </watch>

  <watch>
    <get property="fg"/>
    <get property="stroke-width"/>
    <set>
      if (`fg) {
        `fg.lineWidth = `stroke\-width;
      }
    </set>
  </watch>

  <watch>
    <get select="@fg" dom-event="mousedown" prevent-default="true"
      value="flexo.fail(!`fg || !`enabled) || $in"/>
    <set property="down">
      console.log($scope);
      `fg.beginPath();
      var p = flexo.event_offset_pos($in, $scope['@fg']);
      `fg.moveTo(p.x, p.y);
      return true;
    </set>
  </watch>

  <watch>
    <get select="$document" dom-event="mousemove">
      flexo.fail(!`down);
      var p = flexo.event_offset_pos($in, `fg.canvas);
      `fg.clearRect(0, 0, `fg.canvas.width, `fg.canvas.height);
      `fg.lineTo(p.x, p.y);
      `fg.stroke();
    </get>
  </watch>

  <watch>
    <get select="$document" dom-event="mouseup"/>
    <set property="down">
      console.log($scope);
      flexo.fail(!`down);
      `bg.drawImage(`fg.canvas, 0, 0);
      `fg.clearRect(0, 0, `fg.canvas.width, `fg.canvas.height);
      return false;
    </set>
  </watch>

</component>
