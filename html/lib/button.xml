<component xmlns="http://bender.igel.co.jp" href="ui-elem.xml" id="button"
  base-class="button">

  <property name="down" as="boolean" value="false"/>
  <property name="down-class" value="`down ? 'down' : ''"/>

  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div id="div" class="`base\-class `class `enabled\-class `down\-class">
      <content>
        OK
      </content>
    </html:div>
  </view>

  <watch>
    <get select="@div" dom-event="mousedown" prevent-default="true"
      match="`enabled"/>
    <set property="down" value="true"/>
  </watch>

  <watch>
    <get select="$document" dom-event="mouseup" match="`down"/>
    <set property="down" value="false"/>
    <set event="pushed" match="$in.target === @div"/>
  </watch>

</component>
