<component xmlns="http://bender.igel.co.jp" prototype="bender.$.x">
  <link rel="stylesheet" href="set-property.css"/>
  <link rel="script" href="set-property.js"/>
  <property name="clicks" as="number" value="0"/>
  <!--
  <property name="roman" as="dynamic" value="flexo.to_roman({clicks})"/>
  -->
  <view xmlns:html="http://www.w3.org/1999/xhtml">
    <html:div>
      <html:div id="button" class="button" aria-role="button">
        Click me
      </html:div>
      <html:p>
        Number of clicks: {clicks}
        <!--
        <html:span class="roman">{roman}</html:span>
        -->
      </html:p>
      <component href="q.xml" class="q" text="Number of clicks: {clicks}"/>
    </html:div>
  </view>
  <watch>
    <get view="button" dom-event="mousedown">
      value.preventDefault();
    </get>
    <set instance="$self" property="clicks" value="{ {clicks} + 1 }"/>
  </watch>
</component>
