<component xmlns="http://bender.igel.co.jp"
  xmlns:html="http://www.w3.org/1999/xhtml" id="button">
  <view>
    <target q="head" once="true">
      <html:style>
        .button { font-family: Futura, sans-serif; display: inline-block;
          cursor: default; background-color:#ddd; padding: 4px;
          -moz-border-radius: 6px; -webkit-border-radius: 6px;
          border-radius: 6px; box-shadow: 0px 1px 0px #bbb;
          text-shadow: 0px 1px 0px #fff; margin: 8px; }
      </html:style>
    </target>
    <html:div class="button" id="b">
      <content/>
    </html:div>
  </view>
  <watch>
    <get view="b" event="mouseclick">
      if (value.button === 0) {
        value.preventDefault();
        flexo.add_class(this.views.b, "__down");
        return true;
      }
    </get>
    <watch>
      <get view="$document" event="mouseup" once="true">
        value.preventDefault();
        flexo.rempve_class(this.views.b, "__down");
      </get>
    </watch>
  </watch>
</component>
