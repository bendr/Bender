<component xmlns="http://bender.igel.co.jp" xmlns:b="http://bender.igel.co.jp/b"
  xmlns:e="http://bender.igel.co.jp/e" xmlns:svg="http://www.w3.org/2000/svg"
  id="led" e:width="16px" e:height="16px" b:on="false">
  <title>LED</title>
  <help>This is a very simple LED showing an on/off state. Simply give it a
    height and a width to display itself in, and switch its status between on
    and off. It is off by default.</help>
  <stylesheet>
    .bender-led.off { fill: #888; }
    .bender-led.on { fill: #0f8; }
  </stylesheet>

  <view>
    <svg:svg id="svg" viewBox="0 0 100 100">
      <svg:circle id="circle" class="bender-led" cx="50" cy="50" r="50"/>
    </svg:svg>
  </view>

  <watch>
    <get property="width"/>
    <set view="svg" attr="width"/>
  </watch>

  <watch>
    <get property="height"/>
    <set view="svg" attr="height"/>
  </watch>

  <watch>
    <get property="on"/>
    <set>
      flexo.remove_class(this.views.circle, value ? "off" : "on");
      flexo.add_class(this.views.circle, value ? "on" : "off");
    </set>
  </watch>

</component>
